[
  {
    "label": "Run C++ Test",
    "command": "cd src/cpp && ./run_test.sh $(basename $ZED_FILE .test.cpp | sed 's/\\.cpp$//')_test",
    "use_new_terminal": true,
    "allow_concurrent_runs": false,
    "reveal": "always"
